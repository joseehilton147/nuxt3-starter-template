{
	"name": "nuxt3-boilerplate",
	"private": true,
	"dependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@pinia/nuxt": "^0.4.9",
		"pinia": "^2.0.36"
	},
	"devDependencies": {
		"@nuxtjs/eslint-config-typescript": "^12.0.0",
		"@pinia-plugin-persistedstate/nuxt": "^1.1.1",
		"@unocss/eslint-config": "^0.51.12",
		"@unocss/nuxt": "^0.51.12",
		"@unocss/preset-rem-to-px": "^0.51.12",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nuxt": "^3.4.3",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"unocss": "^0.51.12"
	},
	"overrides": {
		"vue": "latest"
	},
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"clean": "nuxt clean && npm install",
		"lint:fix": "prettier --write --list-different . && npm run lint:check --fix",
		"lint:check": "eslint --ext .js,.ts,.vue --max-warnings 0 .",
		"lint:prettier": "prettier --write .",
		"start": "node .output/server/index.mjs",
		"prepare": "husky install",
		"commit": "git add . && git-cz",
		"commit-push": "git add . && git-cz && git push"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.vue": [
			"npm run lint:prettier",
			"npm run lint:check --fix"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
